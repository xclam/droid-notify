<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:key="quite_time_settings_screen">
	<ListPreference
		android:layout="@layout/custom_preference_list"
		android:key="quiet_time_of_week"
		android:title="@string/preference_quiet_time_of_week_title"
		android:summary="@string/preference_quiet_time_of_week_summary"
		android:defaultValue="0"
		android:entries="@array/quiet_time_of_week_options"
		android:entryValues="@array/quiet_time_of_week_values" />			
	<Preference
		android:layout="@layout/custom_preference"
		android:key="quiet_time_blackout_period_preference"
		android:title="@string/preference_quiet_time_quiet_period_title"
		android:summary="@string/preference_quiet_time_quiet_period_summary" /> 
</PreferenceScreen>